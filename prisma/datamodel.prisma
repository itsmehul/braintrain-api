
type Link {
  id: ID! @unique
  description: String!
  url: String!
  postedBy: User
}

type User {
  id: ID! @unique
  name: String!
  email: String! @unique
  fid: String!
  links: [Link!]!
  teacherIn: [Classroom!] @relation(name:"TeacherInClassroom")
  studentIn: [Classroom!] @relation(name:"StudentInClassroom")

}

type Classroom {
  id: ID! @unique
  name: String!
  students: [User!] @relation(name:"StudentInClassroom")
  teacher: User! @relation(name:"TeacherInClassroom")
  description: String
  rating: Int
  startsFrom: DateTime
  learning: String
  language: String
  requirments: String
  objectives: String
  lectures: [Lecture!]
  fee: Float
}

type Lecture {
  id: ID! @unique
  name: String!
  description: String!
  createdAt: DateTime!
  updatedAt: DateTime!
  liveAt: DateTime
  students:[User!] @relation(name:"StudentInLecture")
  teacher:User @relation(name:"TeacherInLecture")
  classroom:Classroom
}